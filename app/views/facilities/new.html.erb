<div class="text-center">
  <h1  style="color:#91a0d8;"><i class="fas fa-landmark"></i>  新規施設登録</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
      

    <%= form_with(model: @facility, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group">
        <%= f.label :name, '名称' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :address, '住所' %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :access, 'アクセス' %>
        <%= f.text_field :access, class: 'form-control' %>
      </div>
      
      <div id="edit">
      <label class="btn">
        写真を追加してください
        <span style="display:none;">
          <%= f.file_field :photo, required: false, multiple: false, name: 'photo' %>
        </span>
      </label>
      </div>

      <%= f.submit '新規施設登録', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>