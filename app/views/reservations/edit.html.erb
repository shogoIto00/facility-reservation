<div class="text-center">
  <h1  style="color:#91a0d8;"><i class="fas fa-door-open"></i> 予約枠更新</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
      

    <%= form_with(model: @allocation, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group">
        <%= f.label :room_id, '部屋id' %>
        <%= f.number_field :room_id, class: 'form-control', value: params[:room_id] , readonly: true %>
      </div>
      
      <div class="form-group">
        <%= f.label :timeslot_id, '時間枠id' %>
        <%= f.number_field :timeslot_id, class: 'form-control', value: params[:timeslot_id] , readonly: true %>
      </div>
      
      <div class="form-group">
        <%= f.label :date, '日付' %>
        <%= f.date_field :date, class: 'form-control' %>
      </div>
      
      
      <div class="form-group">
        <%= f.label :status, '状態' %>
        <%= f.text_field :status, class: 'form-control' %>
      </div>
      
      <div id='edit'>
      <%= f.submit '予約枠更新', class: 'btn btn-block' %>
      </div>
    <% end %>
  </div>
</div>