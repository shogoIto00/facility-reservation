<div class="text-center">
  <h1  style="color:#91a0d8;"><i class="fas fa-calendar-check"></i> 予約状況更新</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
      

    <%= form_with(model: @reservation, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group">
        <%= f.label :allocation_id, '予約枠id' %>
        <%= f.number_field :allocation_id, class: 'form-control', value: @reservation.allocation.id , readonly: true %>
      </div>
      
      <div class="form-group">
        <%= f.label :user_id, 'ユーザid' %>
        <%= f.number_field :user_id, class: 'form-control', value: @reservation.user.id , readonly: true %>
      </div>
      
      <!-- <div class="form-group">
        <%= f.label :status, '状態' %>
        <%= f.text_field :status, class: 'form-control', value: @reservation.status   %>
      </div> -->
      
      <div class="form-group">
        <%= f.label :status, '状態' %>
         <%= f.select :status, [["予約", "予約"], ["無断キャンセル", "無断キャンセル"], ["完了", "完了"]], {}, {class: 'custom-select'} %>
      </div>
      
      <div id='edit'>
      <%= f.submit '予約状況更新', class: 'btn btn-block' %>
      </div>
    <% end %>
  </div>
</div>